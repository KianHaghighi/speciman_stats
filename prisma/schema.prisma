// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
  UNSPECIFIED
}

enum EntryStatus {
  PENDING
  APPROVED
  REJECTED
}

enum NotificationType {
  FRIEND_REQUEST
  FRIEND_ACCEPTED
  ENTRY_REVIEWED
  ELO_UPDATE
  ACHIEVEMENT
  SYSTEM
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum UnitSystem {
  METRIC
  IMPERIAL
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String   @id @default(cuid())
  name          String?
  displayName   String?
  email         String?  @unique
  password      String?  // For credentials auth
  image         String?
  gender        Gender   @default(UNSPECIFIED)
  dateOfBirth   DateTime?
  primaryClassId String?
  primaryClass   Class?  @relation("UserPrimaryClass", fields: [primaryClassId], references: [id])
  gymId         String?
  gym           Gym?    @relation(fields: [gymId], references: [id])
  overallElo    Float    @default(1000)
  classElos     UserClassElo[]
  metricEntries UserMetricEntry[]
  reviewedEntries UserMetricEntry[] @relation("EntryReviewer")
  notifications Notification[]
  friendshipsAsRequester Friendship[] @relation("FriendshipRequester")
  friendshipsAsAddressee Friendship[] @relation("FriendshipAddressee")
  eloEvents    EloEvent[]
  prefs        UserPrefs?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([gymId])
}

model Gym {
  id        String   @id @default(cuid())
  name      String
  street    String?
  city      String?
  state     String?
  country   String?
  lat       Float?
  lng       Float?
  users     User[]
  createdAt DateTime @default(now())

  @@index([city, state, country])
  @@index([lat, lng])
}

model Class {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  metrics   Metric[]
  users     UserClassElo[]
  primaryUsers User[] @relation("UserPrimaryClass")
  eloEvents EloEvent[]
  createdAt DateTime @default(now())
}

model Metric {
  id             String  @id @default(cuid())
  classId        String
  class          Class   @relation(fields: [classId], references: [id])
  name           String
  slug           String  @unique
  unit           String
  higherIsBetter Boolean @default(true)
  weight         Float   @default(1)
  group          String?
  rankBreakpoints Json?
  createdAt      DateTime @default(now())
  entries        UserMetricEntry[]
}

model UserClassElo {
  id        String  @id @default(cuid())
  userId    String
  classId   String
  elo       Float   @default(1000)
  updatedAt DateTime @updatedAt
  user      User   @relation(fields: [userId], references: [id])
  class     Class  @relation(fields: [classId], references: [id])

  @@unique([userId, classId])
}

model UserMetricEntry {
  id           String   @id @default(cuid())
  userId       String
  metricId     String
  value        Float
  notes        String?
  status       EntryStatus @default(PENDING)
  videoUrl     String?
  reviewNotes  String?
  reviewedAt   DateTime?
  reviewedById String?
  reviewer     User?   @relation("EntryReviewer", fields: [reviewedById], references: [id])
  createdAt    DateTime @default(now())
  user         User    @relation(fields: [userId], references: [id])
  metric       Metric  @relation(fields: [metricId], references: [id])
  reviewToken  ReviewToken?

  @@index([userId, metricId, createdAt])
  @@index([status])
  @@index([reviewedById])
}

model ReviewToken {
  id        String   @id @default(cuid())
  token     String   @unique
  entryId   String   @unique
  entry     UserMetricEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  body      String
  data      Json?
  readAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, readAt])
  @@index([type])
}

model Friendship {
  id           String        @id @default(cuid())
  requesterId  String
  addresseeId  String
  status       FriendshipStatus @default(PENDING)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  requester    User          @relation("FriendshipRequester", fields: [requesterId], references: [id])
  addressee    User          @relation("FriendshipAddressee", fields: [addresseeId], references: [id])

  @@unique([requesterId, addresseeId])
  @@index([requesterId, status])
  @@index([addresseeId, status])
}

model UserPrefs {
  id         String   @id @default(cuid())
  userId     String   @unique
  units      UnitSystem @default(METRIC)
  language   String   @default("en")
  sfxEnabled Boolean  @default(true)
  sfxVolume  Float    @default(0.6)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EloEvent {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  classId   String?
  class     Class?   @relation(fields: [classId], references: [id], onDelete: Cascade)
  eventType String
  oldValue  Float
  newValue  Float
  change    Float
  metadata  String?  // JSON string
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([classId])
  @@index([createdAt])
  @@index([eventType])
}
